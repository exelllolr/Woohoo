<UserControl x:Class="dimplom.Controlers.WooHooViewsMessageOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dimplom.Controlers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid Background="Gray" Opacity="0.8"/>
            <Border Background="White" Width="300" Height="220" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center">   
                <StackPanel Margin="10">
                    <TextBlock Text="Reply to Message" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                    <TextBox x:Name="ReplyTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Height="100"/>
                    <Button x:Name="BSendReply"  
                        Content="Send"
                            HorizontalAlignment="Center"
                            Margin="0 10" 
                            Click="BSendReply_Click"/>
                   
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
